<Page
    x:Class="ProjectWindows.AdminLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock Text="Admin login" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36"/>
        <TextBox Text="Username" Margin="5,100,5,10" HorizontalAlignment="Center" MinWidth="300"/>
        <PasswordBox Margin="5,10,5,10" HorizontalAlignment="Center" MinWidth="300"/>
        <Button Content="Login" Margin="5,10,5,10" Width="160" HorizontalAlignment="Center" Click="Navigate_Statistieken"/>
        <Button Content="Backt to mainpage" Margin="0,50,0,25" Width="160" HorizontalAlignment="Center" Click="Navigate_Mainpage"/>
    </StackPanel>
</Page>
